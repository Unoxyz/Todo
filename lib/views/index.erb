<h1>TODOs</h1>
<a href="/todos/new" class="btn btn-primary pull-right">New</a>
<table class="table table-striped table-hover">
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% todos.each do |todo| %>
    <tr>
      <td>
        <a href="/todos/<%= todo.id %>/edit"><%= todo.title%></a>
      </td>
      <td><%= todo.description.gsub(/\r\n/, "<br> ") %></td>
      <td>
        <form class="" action="/todos/<%= todo.id %>" method="post">
          <input type="hidden" name="_method" value="delete"/>
          <button type="submit" name="button" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
