<form class="col-xs-12 col-sm-10 col-md-8" action="/todos<%= "/" + todo.id.to_s if edit %>" method="post">
  <div class="form-group">
    <label for="input_title">Title</label>
    <input id="input_title" type="text" name="title" value="<%= todo.title if edit %>" class="form-control" autofocus required>
  </div>
  <div class="form-group">
    <label for="input_description">Description</label>
    <textarea id="input_description" name="description" rows="3" class="form-control"><%= todo.description if edit %></textarea><br>
  </div>
  <div class="form-group">
    <%= %q{<input type="hidden" name="_method" value="put">} if edit %>
    <button type="submit" name="button" class="btn btn-primary">Save</button>
    <a href="/todos" class="btn btn-link" role="button">Cancel</a>
  </div>
</form>
